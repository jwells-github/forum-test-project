extends layout

block content
  h2 Signup 
  form(method='POST')
    div.form-group
      label(for='email') Email:
      input#email.form-control(type='text' placeholder='email address' name='email')
      label(for='username') Username:
      input#username.form-control(type='text' placeholder='username' name='username'
                                  required='true')
      label(for='password') Password:
      input#password.form-control(type='password' placeholder='password' name='password'
                                  required='true')
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
       li!= error.msg