extends layout

block content
  h2 Submit a link 
  form(method='POST')
    div.form-group
      label(for='title') title:
      input#title.form-control(type='text' name='title'
                                   value='')
      label(for='link') url:
      textarea#link.form-control(type='text'  name='link'
                                  required='true'  value=(undefined===username ? '' : username))
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
       li!= error.msg