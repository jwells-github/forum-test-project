extends layout

block content
  h1= title
  if post.text !== ''
    p= post.text
  if locals.currentUser
    p real form not sub form
    form(method='POST')
      div.form-group
        textarea#text.form-control(type='text' name='text' required='true')
      button.btn.btn-primary(type='submit') Submit
  else
    p You must be logged in to post comments
  include shared/comment_list.pug
  script
    include ../public/javascripts/postDelete.js
    include ../public/javascripts/toggleActionConfirmation.js
    include ../public/javascripts/fetchPost.js


