extends layout

block content
  - let is_moderator = false;
  if locals.currentUser
    - let mod = post.subreddit.moderators.find(moderator => String(moderator.user) === String(locals.currentUser._id))
    if mod
      - is_moderator = true;
  h1= title
  if post.text !== ''
    p= post.text
  if locals.currentUser
    p real form not sub form
    form(method='POST')
      div.form-group
        textarea#text.form-control(type='text' name='text' required='true')
      button.btn.btn-primary(type='submit') Submit
  else
    p You must be logged in to post comments
  include shared/comment_list.pug


