if !comment.is_deleted
  p= comment.text
  p= comment._id
  if locals.currentUser
    if String(locals.currentUser._id) === String(comment.submitter)
      -let onClickPath = "deleteComment('"+  comment._id + "',this)"
      include delete_confirmation.pug

else
  p Comment Deleted

if locals.currentUser
  form(method='POST')
    div.form-group
      textarea#text.form-control(type='text' name='text' required='true')
      input(type='hidden' name='parentCommentID' value=comment._id)
    button.btn.btn-primary(type='submit') Submit 