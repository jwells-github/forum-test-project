extends layout

block content
  h2 Login 
  form(method='POST')
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text' placeholder='username' name='username'
                                  required='true'  value=(undefined===username ? 'username' : username))
      label(for='password') Password:
      input#password.form-control(type='password' placeholder='password' name='password'
                                  required='true' value='')
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
       li!= error.msg