extends layout

block content
  - let is_moderator = false;
  if locals.currentUser
    - let mod = subForum.moderators.find(moderator => String(moderator.user) === String(locals.currentUser._id))
    if mod
      - is_moderator = true;
  h1= title
  h1= subForum.name
  a(href= subForum.name+'/submit/link') Submit a link
  br
  a(href= subForum.name+'/submit/text') Submit a text post
  br
  br
  include shared/post_list.pug
  script
    include ../public/javascripts/postDelete.js
    include ../public/javascripts/postRemoval.js
    include ../public/javascripts/postVote.js
    include ../public/javascripts/toggleActionConfirmation.js
    include ../public/javascripts/fetchPost.js

